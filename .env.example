# =============================================================================
# Google Maps Scraper â€” Environment Variables
# This project runs entirely on FREE-TIER services ($0/month).
# No Google Cloud API key required.
# Copy this file to .env and fill in your values.
# =============================================================================

# --- API Keys (all optional) -------------------------------------------------
# SerpAPI: supplementary search layer (100 free searches/month)
# Get your key at: https://serpapi.com/manage-api-key
SERPAPI_KEY=

# Outscraper: optional email/social enrichment (500 free records/month)
# Get your key at: https://app.outscraper.com/
OUTSCRAPER_API_KEY=

# --- PostgreSQL --------------------------------------------------------------
POSTGRES_USER=gmaps
POSTGRES_PASSWORD=gmaps_secret
POSTGRES_DB=gmaps_scraper

# Async URL (used by FastAPI / SQLAlchemy async engine)
DATABASE_URL=postgresql+asyncpg://gmaps:gmaps_secret@db:5432/gmaps_scraper

# Sync URL (used by Alembic and Celery tasks)
DATABASE_URL_SYNC=postgresql+psycopg2://gmaps:gmaps_secret@db:5432/gmaps_scraper

# --- Redis -------------------------------------------------------------------
REDIS_URL=redis://redis:6379/0

# --- Backend -----------------------------------------------------------------
SECRET_KEY=change-me-to-a-random-secret-key
BACKEND_CORS_ORIGINS=["http://localhost:3000","http://127.0.0.1:3000"]

# --- Frontend ----------------------------------------------------------------
NEXT_PUBLIC_API_URL=http://localhost:8000

# --- Playwright (primary scraper) --------------------------------------------
PLAYWRIGHT_HEADLESS=true
PLAYWRIGHT_SCRAPE_DETAILS=true

# --- Rate Limits & Free Tier Caps --------------------------------------------
# SerpAPI: requests per second
SERP_API_RPS=5
# SerpAPI: monthly search limit (free tier = 100)
SERPAPI_MONTHLY_LIMIT=100
# Outscraper: monthly record limit (free tier = 500)
OUTSCRAPER_MONTHLY_LIMIT=500
# Grid search overlap factor (0.0 = no overlap, 0.3 = 30% overlap)
GRID_OVERLAP_FACTOR=0.2
